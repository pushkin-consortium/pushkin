{
  "name": "@pushkin-templates/site-basic",
  "version": "1.0.0",
  "description": "A template for building a bare-bones Pushkin site. No authentication, no forum, no dashboard, but everything else you need.",
  "keywords": [
    "pushkin",
    "template"
  ],
  "author": "L3",
  "license": "MIT",
  "homepage": "https://pushkin-consortium.github.io/pushkin",
  "repository": {
    "type": "git",
    "url": "https://github.com/pushkin-consortium/pushkin.git",
    "directory": "templates/sites/basic"
  },
  "bugs": {
    "url": "https://github.com/pushkin-consortium/pushkin/issues"
  },
  "files": [
    "build/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "mkdir -p build && cd src && zip -FS -r -q ../build/template.zip . -x \"*node_modules*\"",
    "prepack": "cp ../../../LICENSE .",
    "build-exp-web-pages": "./build_exp_webpages.sh"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.2.2",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "aphrodite": "^2.4.0",
    "history": "^5.3.0",
    "identity-obj-proxy": "^3.0.0",
    "react": "18.2.0",
    "react-bootstrap": "^2.10.2",
    "react-dom": "18.2.0",
    "react-redux": "^9.1.0",
    "react-router-bootstrap": "^0.26.2",
    "react-router-dom": "^6.22.3",
    "react-social-icons": "^6.15.0",
    "redux": "^5.0.1",
    "redux-mock-store": "^1.5.4"
  },
  "dependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "clearMocks": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "../../config(?:/.*)?(?:\\.js)?$": "<rootDir>/src/__mocks__/config.js",
      "../experiments(?:/.*)?(?:\\.js)?$": "<rootDir>/src/__mocks__/experiments.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/public/"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
